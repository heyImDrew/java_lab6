<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="480.0" prefWidth="640.0">
         <children>
            <ImageView fx:id="background" fitHeight="480.0" fitWidth="640.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../bg.png" />
               </image>
            </ImageView>
            <Button fx:id="buttonStart" layoutX="385.0" layoutY="426.0" mnemonicParsing="false" onAction="#bStartClick" prefHeight="36.0" prefWidth="99.0" text="Start" />
            <Button fx:id="buttonStop" layoutX="503.0" layoutY="426.0" mnemonicParsing="false" onAction="#bStopClick" prefHeight="36.0" prefWidth="99.0" text="Stop" />
            <ImageView fx:id="no_lights" fitHeight="300.0" fitWidth="300.0" layoutX="77.0" layoutY="112.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../h_no_lights.png" />
               </image>
            </ImageView>
            <ImageView fx:id="cloud_1" fitHeight="25.0" fitWidth="25.0" layoutX="284.0" layoutY="99.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="cloud_2" fitHeight="20.0" fitWidth="20.0" layoutX="274.0" layoutY="72.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </AnchorPane>
   </children>
</GridPane>
